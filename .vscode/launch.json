{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Vulkan Renderer",
      "type": "cppdbg",
      "request": "launch",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/",
      "environment": [],
      "program": "${workspaceFolder}/zig-out/bin/vulkan-renderer",
      "osx": {
        "MIMode": "lldb",
        "targetArchitecture": "arm64",
        "externalConsole": false
      },
      "linux": {
        "externalConsole": false
      },
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceFolder}/zig-out/bin/vulkan-renderer.exe",
        "console": "integratedTerminal"
      }
    }
  ]
}
